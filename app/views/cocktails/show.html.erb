<h1><%= @cocktail.name %></h1>
<div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient %> <%= dose.description %></li>
    <% end %>
  </ul>
</div>

<p><%= link_to "Add a new dose (ingredient and description) for this cocktail", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
<p><%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %></p>
